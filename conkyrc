${hr 1}
$processes processes ($running_processes running)
CPU temp $alignr ${exec sensors | grep temp2 | awk '{print $2}' | sed 's/°//' | sed 's/+//'} 
${execbar sensors | grep temp2 | awk '{print $2}' | sed 's/°//' | sed 's/+//'}
